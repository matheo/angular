{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@matheo/datasource": [
        "libs/datasource/src/index.ts"
      ],
      "@matheo/datepicker": [
        "libs/datepicker/src/index.ts"
      ],
      "@matheo/datepicker/*": [
        "libs/datepicker/*"
      ],
      "@matheo/schematics": [
        "libs/schematics/src/index.ts"
      ]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
